extends header

block content
    <!-- DataTables CSS -->
    link(rel="stylesheet", href="../views/plugins/datatables-plugins/dataTables.bootstrap.css")
    <!-- DataTables Responsive CSS -->
    link(rel="stylesheet", href="../views/plugins/datatables-responsive/dataTables.responsive.css")
    <!-- DataTables JavaScript -->
    script(src="../views/plugins/datatables/js/jquery.dataTables.min.js")
    script(src="../views/plugins/datatables-plugins/dataTables.bootstrap.min.js")
    script(src="../views/plugins/datatables-responsive/dataTables.responsive.js")

    div(id='page-wrapper')
        div(class='row')
            div(class='col-lg-12')
                h1(class='page-header') Tables
        div(class='row')
            div(class='col-lg-12')
                div(class='panel panel-default')
                    div(class='panel-heading') DataTables Advanced Tables
                    div(class='panel-body')
                        table(class='table table-striped table-bordered table-hover', width='100%', id='dataTables-example')
                            thead
                                tr
                                    for column in columns
                                        th= column
                            tbody
                                for tabledata in tabledatas
                                    tr
                                        td= tabledata.get(columns[0])
                                        td= tabledata.get(columns[1])
                                        td= tabledata.get(columns[2])
                                        td= tabledata.get(columns[3])
                                        td= tabledata.get(columns[4])
    script(type='text/javascript').
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });

